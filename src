// src/components/SplashScreen.jsx
import { useEffect, useState } from "react";
import "../styles/splash.css";
import LogoAsset from "../assets/logos/logo512.png"; // logo dans src/assets/logos/

export default function SplashScreen({ onFinish, duration = 3000, slogan }) {
  const [logoSrc, setLogoSrc] = useState(LogoAsset);

  // Préchargement du logo
  useEffect(() => {
    const img = new Image();
    img.src = logoSrc;
  }, [logoSrc]);

  // Timer d’auto-fermeture
  useEffect(() => {
    const timer = setTimeout(onFinish, duration);
    return () => clearTimeout(timer);
  }, [onFinish, duration]);

  return (
    <div className="splash-container" role="img" aria-label="Logo Pauyographiques">
      <img
        src={logoSrc}
        alt="Logo Pauyographiques"
        className="splash-logo splash-animate"
        draggable={false}
        onError={() => setLogoSrc("/logo512.png")} // fallback vers public/logo512.png
      />
      <h1 className="splash-slogan">
        {slogan || "Là où l’art de choquer en direct devient un pouvoir."}
      </h1>
    </div>
  );
}

