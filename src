src/styles/splash.css
css
/* Animation du SplashScreen */
@keyframes splashZoom {
  0% {
    transform: scale(0.8);
    opacity: 0;
  }
  50% {
    transform: scale(1.05);
    opacity: 1;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.splash-animate {
  animation: splashZoom 3s ease-in-out forwards;
}
index.css
@tailwind base;
@tailwind components;
@tailwind utilities;

/* Import de l’animation du SplashScreen */
@import "./styles/splash.css";

/* Styles globaux optionnels */
html,
body {
  margin: 0;
  padding: 0;
  font-family: 'Inter', sans-serif;
  background-color: #000; /* fond sobre et classe */
  color: #fff;
}
src/main.jsx
import React from "react";
import ReactDOM from "react-dom/client";
import App from "./App";
import "./index.css";

ReactDOM.createRoot(document.getElementById("root")).render(
  <React.StrictMode>
    <App />
  </React.StrictMode>
);
