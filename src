  background-color: #000;
}

.text-light {
  color: #fff;
}

// src/App.jsx
import React, { useEffect, useState } from "react";
import { BrowserRouter, Routes, Route } from "react-router-dom";

// Pages
import Accueil from "./pages/Accueil";
import Boutique from "./pages/Boutique";
import Blog from "./pages/Blog";
import ContactForm from "./pages/ContactForm";
import APropos from "./pages/ÀPropos";
import Manifeste from "./pages/Manifeste";
import FAQ from "./pages/FAQ";
import Portfolio from "./pages/Portfolio";
import Error404 from "./pages/Error404";

// Composants globaux
import Navbar from "./components/Navbar";
import Footer from "./components/Footer";

// Composants spécifiques
import PlayerLive from "./components/PlayerLive";
import Commentaires from "./components/Commentaires";
import Evaluation from "./components/Evaluation";
import SplashScreen from "./components/SplashScreen";

const App = () => {
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    const timer = setTimeout(() => setLoading(false), 3000); // Durée splash 3s
    return () => clearTimeout(timer);
  }, []);

  if (loading)
    return <SplashScreen onFinish={() => setLoading(false)} />;

  return (
    <BrowserRouter>
      <Navbar />
      <Routes>
        <Route path="/" element={<Accueil />} />
        <Route path="/boutique" element={<Boutique />} />
        <Route path="/blog" element={<Blog />} />
        <Route path="/contact" element={<ContactForm />} />
        <Route path="/apropos" element={<APropos />} />
        <Route path="/manifeste" element={<Manifeste />} />
        <Route path="/faq" element={<FAQ />} />
        <Route path="/portfolio" element={<Portfolio />} />
        <Route path="/live" element={<PlayerLive />} />
        <Route path="/commentaires" element={<Commentaires />} />
        <Route path="/evaluation" element={<Evaluation />} />
        <Route path="*" element={<Error404 />} />
      </Routes>
      <Footer />
    </BrowserRouter>
  );
};

export default App;

