src/App.jsx
import { useState } from "react";
import SplashScreen from "./components/SplashScreen";
import HomePage from "./pages/HomePage";

export default function App() {
  const [showSplash, setShowSplash] = useState(true);

  return showSplash ? (
    <SplashScreen onFinish={() => setShowSplash(false)} />
  ) : (
    <HomePage />
  );
}

src / index.js
import React from "react";
import ReactDOM from "react-dom/client";
import App from "./App";
import "./styles/splash.css"; // Import du style global

const root = ReactDOM.createRoot(document.getElementById("root"));
root.render(
  <React.StrictMode>
    <App />
  </React.StrictMode>
);
src/components/splashscreen.jsx
import { useEffect } from "react";
import "../styles/splash.css";
import logo from "../assets/logo512.png"; // logo réel placé dans public ou src/assets

export default function SplashScreen({ onFinish }) {
  useEffect(() => {
    const timer = setTimeout(onFinish, 3000); // durée 3s
    return () => clearTimeout(timer);
  }, [onFinish]);

  return (
    <div className="splash-container">
      <img src={logo} alt="Logo Pauyographiques" className="splash-logo" />
      <h1 className="splash-slogan">
        Là où l’art de choquer en direct devient un pouvoir.
      </h1>
    </div>
  );
}
