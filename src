src/styles/splash.css
@keyframes splashZoom {
  0% { transform: scale(0.8); opacity: 0; }
  50% { transform: scale(1.05); opacity: 1; }
  100% { transform: scale(1); opacity: 1; }
}

.splash-animate { animation: splashZoom 3s ease-in-out forwards; }

.splash-container {
  display: flex; flex-direction: column; align-items: center; justify-content: center;
  height: 100vh; background-color: #000; color: #fff; text-align: center; padding: 0 1rem;
}
.splash-logo { width: 150px; height: 150px; margin-bottom: 20px; }
.splash-slogan { font-size: 1.2rem; max-width: 320px; line-height: 1.35; }

// src/components/SplashScreen.jsx
import { useEffect, useState } from "react";
import "../styles/splash.css";
import LogoAsset from "../assets/logos/logo512.png"; // logo dans src/assets/logos/

export default function SplashScreen({ onFinish, duration = 3000 }) {
  // On essaie d'abord le logo depuis src/assets, puis on bascule sur /public si erreur
  const [logoSrc, setLogoSrc] = useState(LogoAsset);

  // Pr√©chargement (√©vite un clignotement)
  useEffect(() => {
    const img = new Image();
    img.src = logoSrc;
  }, [logoSrc]);

  // Timer d‚Äôauto-fermeture
  useEffect(() => {
    const timer = setTimeout(onFinish, duration);
    return () => clearTimeout(timer);
  }, [onFinish, duration]);

  return (
    <div className="splash-container">
      <img
        src={logoSrc}
        alt="Logo Pauyographiques"
        className="splash-logo splash-animate"
        draggable={false}
        onError={() => setLogoSrc("/logo512.png")} // fallback vers public/logo512.png
      />
      <h1 className="splash-slogan">
        L√† o√π l‚Äôart de choquer en direct devient un pouvoir.
      </h1>
    </div>
  );
}

