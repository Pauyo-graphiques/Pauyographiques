// src/components/Boutique.jsx
import React from "react";

const products = [
  { id: 1, name: "Produit 1", price: 20 },
  { id: 2, name: "Produit 2", price: 35 },
];

export default function Boutique() {
  const handleBuy = (product) => {
    alert(`Paiement simul√© pour ${product.name} - ${product.price}‚Ç¨`);
    // Ici tu peux int√©grer Stripe Checkout
  };

  return (
    <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
      {products.map((p) => (
        <div key={p.id} className="border p-4 rounded shadow">
          <h3 className="text-xl font-semibold">{p.name}</h3>
          <p className="mb-2">{p.price} ‚Ç¨</p>
          <button
            onClick={() => handleBuy(p)}
            className="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700"
          >
            Acheter
          </button>
        </div>
      ))}
    </div>
  );
}
