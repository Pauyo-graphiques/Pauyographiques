src/router/routes.jsx
import React from "react";
import { createBrowserRouter } from "react-router-dom";
import App from "../App";

// Pages
import Accueil from "../pages/Accueil";
import Boutique from "../pages/Boutique";
import Blog from "../pages/Blog";
import Contact from "../pages/Contact";
import Live from "../pages/Live";

const router = createBrowserRouter([
  {
    path: "/",
    element: <App />,
    children: [
      { path: "/", element: <Accueil /> },
      { path: "/boutique", element: <Boutique /> },
      { path: "/blog", element: <Blog /> },
      { path: "/contact", element: <Contact /> },
      { path: "/live", element: <Live /> },
    ],
  },
]);

export default router;

// src/App.jsx
import React, { useState } from "react";
import SplashScreen from "./components/SplashScreen";
import MainAppContent from "./components/MainAppContent";
import LogoGenerator from "./components/LogoGenerator"; // <-- importer ici

export default function App() {
  const [showSplash, setShowSplash] = useState(true);

  return (
    <>
        <SplashScreen onFinish={() => setShowSplash(false)} />
      ) : (
        <MainAppContent />
      )}
    </>
  );
}

// src/components/MainAppContent.jsx
import React, { useState } from "react";
import { BrowserRouter as Router, Routes, Route, Link } from "react-router-dom";
import { ToastContainer, toast } from "react-toastify";
import "react-toastify/dist/ReactToastify.css";
import Boutique from "./Boutique";
import PlayerLive from "./PlayerLive";
import Blog from "./Blog";
import ContactForm from "./ContactForm";
import Header from "./Header";
import Footer from "./Footer";

export default function MainAppContent() {
  const [callNumber] = useState("+1234567890"); // Num√©ro click-to-call

  const handleCallClick = () => {
    toast.info(`Appel en cours vers ${callNumber}`);
    window.location.href = `tel:${callNumber}`;
  };

  return (
    <Router>
      <div className="flex flex-col min-h-screen">
        {/* Header */}
        <Header />

        {/* Main content */}
        <main className="flex-1 p-4">
          <Routes>
            <Route
              path="/"
              element={
                <>
                  <section className="mb-8">
                    <h1 className="text-4xl font-bold mb-4">Bienvenue sur Pauyographiques</h1>
                    <p>D√©couvrez nos √©missions, produits et articles exclusifs.</p>
                  </section>

                  {/* Player vid√©o / Studio live */}
                  <section className="mb-8">
                    <h2 className="text-2xl font-semibold mb-2">Studio Live</h2>
                    <PlayerLive />
                  </section>

                  {/* Boutique */}
                  <section className="mb-8">
                    <h2 className="text-2xl font-semibold mb-2">Boutique</h2>
                    <Boutique />
                  </section>

                  {/* Blog */}
                  <section className="mb-8">
                    <h2 className="text-2xl font-semibold mb-2">Articles r√©cents</h2>
                    <Blog />
                  </section>

                  {/* Contact / Click-to-call */}
                  <section className="mb-8">
                    <h2 className="text-2xl font-semibold mb-2">Contactez-nous</h2>
                    <button
                      onClick={handleCallClick}
                      className="bg-blue-600 text-white px-4 py-2 rounded mr-4 hover:bg-blue-700"
                    >
                      Appeler maintenant
                    </button>
                    <ContactForm />
                  </section>
                </>
              }
            />
            <Route path="/boutique" element={<Boutique />} />
            <Route path="/blog" element={<Blog />} />
            <Route path="/contact" element={<ContactForm />} />
          </Routes>
        </main>

        {/* Footer */}
        <Footer />

        {/* Notifications */}
        <ToastContainer position="bottom-right" autoClose={3000} />
      </div>
    </Router>
  );
}

