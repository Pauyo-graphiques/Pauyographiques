// src/components/Commentaires.jsx
import React, { useState } from "react";

const Commentaires = () => {
  const [comments, setComments] = useState([
    { id: 1, name: "Alice", text: "Super émission !" },
    { id: 2, name: "Bob", text: "J’adore le contenu." },
  ]);
  const [newComment, setNewComment] = useState("");

  const handleAddComment = () => {
    if (!newComment.trim()) return;
    setComments([
      ...comments,
      { id: comments.length + 1, name: "Utilisateur", text: newComment },
    ]);
    setNewComment("");
  };

  return (
    <section className="mt-8 max-w-3xl mx-auto px-4">
      <h2 className="text-2xl font-semibold mb-4">Commentaires</h2>

      {/* Liste des commentaires */}
      <div className="space-y-3 mb-4">
        {comments.map((c) => (
          <div
            key={c.id}
            className="p-3 bg-gray-100 dark:bg-gray-800 rounded-lg shadow-sm"
          >
            <span className="font-semibold">{c.name}:</span> {c.text}
          </div>
        ))}
      </div>

      {/* Formulaire d’ajout */}
      <div className="flex gap-2">
        <input
          type="text"
          value={newComment}
          onChange={(e) => setNewComment(e.target.value)}
          placeholder="Écrire un commentaire..."
          className="flex-1 px-3 py-2 rounded-lg border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
        <button
          onClick={handleAddComment}
          className="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition"
        >
          Envoyer
        </button>
      </div>
    </section>
  );
};

export default Commentaires;

// src/components/Evaluation.jsx
import React, { useState } from "react";

const Evaluation = () => {
  const [rating, setRating] = useState(0);
  const [hover, setHover] = useState(0);
  const [reviews, setReviews] = useState([
    { id: 1, name: "Alice", text: "Excellent site !", stars: 5 },
    { id: 2, name: "Bob", text: "Très pratique et clair.", stars: 4 },
  ]);
  const [newReview, setNewReview] = useState("");

  const handleAddReview = () => {
    if (!newReview.trim() || rating === 0) return;
    setReviews([
      ...reviews,
      { id: reviews.length + 1, name: "Utilisateur", text: newReview, stars: rating },
    ]);
    setNewReview("");
    setRating(0);
  };

  return (
    <section className="mt-8 max-w-3xl mx-auto px-4">
      <h2 className="text-2xl font-semibold mb-4">Évaluation du site</h2>

      {/* Liste des avis */}
      <div className="space-y-3 mb-4">
        {reviews.map((r) => (
          <div key={r.id} className="p-3 bg-gray-100 dark:bg-gray-800 rounded-lg shadow-sm">
            <div className="flex items-center mb-1">
              {Array(5)
                .fill(0)
                .map((_, i) => (
                  <span key={i} className={i < r.stars ? "text-yellow-400" : "text-gray-400"}>
                    ★
                  </span>
                ))}
              <span className="ml-2 font-semibold">{r.name}</span>
            </div>
            <p>{r.text}</p>
          </div>
        ))}
      </div>

      {/* Formulaire d'ajout */}
      <div className="flex flex-col gap-2">
        <div className="flex items-center gap-1">
          {Array(5)
            .fill(0)
            .map((_, i) => (
              <span
                key={i}
                className={`cursor-pointer text-2xl ${
                  i < (hover || rating) ? "text-yellow-400" : "text-gray-400"
                }`}
                onMouseEnter={() => setHover(i + 1)}
                onMouseLeave={() => setHover(0)}
                onClick={() => setRating(i + 1)}
              >
                ★
              </span>
            ))}
        </div>
        <input
          type="text"
          value={newReview}
          onChange={(e) => setNewReview(e.target.value)}
          placeholder="Écrire un avis..."
          className="px-3 py-2 rounded-lg border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
        <button
          onClick={handleAddReview}
          className="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition"
        >
          Envoyer
        </button>
      </div>
    </section>
  );
};

export default Evaluation;

// src/components/Boutique.jsx
import React from "react";

const products = [
  { id: 1, name: "Produit 1", price: 20 },
  { id: 2, name: "Produit 2", price: 35 },
];

export default function Boutique() {
  const handleBuy = (product) => {
    alert(`Paiement simulé pour ${product.name} - ${product.price}€`);
    // Ici tu peux intégrer Stripe Checkout
  };

  return (
    <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
      {products.map((p) => (
        <div key={p.id} className="border p-4 rounded shadow">
          <h3 className="text-xl font-semibold">{p.name}</h3>
          <p className="mb-2">{p.price} €</p>
          <button
            onClick={() => handleBuy(p)}
            className="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700"
          >
            Acheter
          </button>
        </div>
      ))}
    </div>
  );
}
// src/components/Blog.jsx
import React from "react";

const articles = [
  { id: 1, title: "Article 1", excerpt: "Résumé de l'article 1..." },
  { id: 2, title: "Article 2", excerpt: "Résumé de l'article 2..." },
];

export default function Blog() {
  return (
    <div className="space-y-4">
      {articles.map((a) => (
        <div key={a.id} className="border p-4 rounded shadow">
          <h3 className="text-xl font-semibold">{a.title}</h3>
          <p>{a.excerpt}</p>
          <a href="#" className="text-blue-600 hover:underline">
            Lire plus
          </a>
        </div>
      ))}
    </div>
  );
}
// src/components/ContactForm.jsx
import React from "react";
import { useForm } from "react-hook-form";

export default function ContactForm() {
  const { register, handleSubmit, reset } = useForm();

  const onSubmit = (data) => {
    alert(`Message envoyé: ${JSON.stringify(data)}`);
    reset();
  };

  return (
    <form onSubmit={handleSubmit(onSubmit)} className="max-w-md">
      <input
        {...register("name")}
        placeholder="Nom"
        className="w-full mb-2 p-2 border rounded"
        required
      />
      <input
        {...register("email")}
        type="email"
        placeholder="Email"
        className="w-full mb-2 p-2 border rounded"
        required
      />
      <textarea
        {...register("message")}
        placeholder="Message"
        className="w-full mb-2 p-2 border rounded"
        required
      />
      <button
        type="submit"
        className="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700"
      >
        Envoyer
      </button>
    </form>
  );
}
